<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="url">
			<value>jdbc:mysql://localhost/book</value>
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password">
			<value>root</value>
		</property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref local="dataSource" />
		</property>
		<property name="mappingResources">
			<list>
				<value>com/Bookinfo.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<constructor-arg>
			<ref bean="dataSource" />
		</constructor-arg>
	</bean>

	<bean id="bookinfoDAO" class="com.BookinfoDAOImp">
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
		<property name="money">
			<value>76</value>
		</property>
		<property name="name">
			<value>hai</value>
		</property>
	</bean>
	<bean id="Bookma" class="com.bookma.service.BookmaService">
		<property name="bookinfoDAO">
			<ref local="bookinfoDAO" />
		</property>
		<property name="bookmaDAO">
			<ref local="bookmaDAO" />
		</property>
		<property name="DService">
			<ref bean="DefaultService" />
		</property>
	</bean>
	<bean id="BookmaService"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<ref local="Bookma" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="insert*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="gg*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
		<property name="postInterceptors">
			<list>
				<ref bean="logBeforeAdvice" />
			</list>
		</property>
	</bean>

	<bean name="/bookma" class="com.bookma.struts.action.BookmaAction"
		singleton="false">
		<property name="bookinfoDAO">
			<ref bean="bookinfoDAO" />
		</property>
		<property name="bookmaService">
			<ref bean="BookmaService" />
		</property>
	</bean>
	<bean id="DefaultService" class="com.DefaultServiceImpl">
	</bean>
	<bean id="userDAO" class="com.laodong.pub.product.spring.UserDAOImp"
		singleton="false">
		<property name="jdbcTemplate">
			<ref bean="jdbcTemplate" />
		</property>
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
	</bean>
	<bean id="autoGenIDDAO" class="com.laodong.pub.util.imp.AutoGenIDDAOImp"
		singleton="false">
		<property name="jdbcTemplate">
			<ref bean="jdbcTemplate" />
		</property>
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
	</bean>
	<bean id="bookmaDAO" class="com.bookma.struts.dao.BookmaDAO"
		singleton="false">
		<property name="jdbcTemplate">
			<ref bean="jdbcTemplate" />
		</property>
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>

	</bean>
	<bean id="doginfoDAO" class="com.doginfo.struts.dao.DoginfoDAO"
		singleton="false">
		<property name="jdbcTemplate">
			<ref bean="jdbcTemplate" />
		</property>
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
	</bean>

	<bean id="logBeforeAdvice" class="com.fhway.spring.aop.TestBeforeAdvice"></bean>

</beans>